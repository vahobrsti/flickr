<%=content_for(:content) do %>
    <%= form_for @search,:url => '',:enforce_utf8=>false, html: {id:'myForm',method:'get'} do |f| %>
        <input type="text" name="q" value="<%= @query %>">
        <input type="submit" value="submit">
        <% end %>
<div>

  <% unless flash.empty? %>
      <p>Something went wrong</p>
  <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>
      <% end %>
</div>
    <% if @results %>

        <% @results.each do |result| %>
            <a target='_blank' href="<%= (defined?(result.url_l)) ? result.url_l : (defined? result.url_z ? result.url_z : result.url_t) %>"><img src="<%= result.url_t %>" alt="<%= result.title %>"> </a>
    <%end %>

        <% if @pages > 1
             i=1
             while i<= @pages
        %>
                <a href="/?q=<%= @query %>&page=<%= i %>"><%= i %></a>
        <% i+=1 %>
        <%end %>
    <%end %>
    <%end %>
<% end %>